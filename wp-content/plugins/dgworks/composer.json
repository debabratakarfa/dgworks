{
  "name": "dgwokrs/plugin",
  "description": "DGWorks Plugin",
  "homepage": "https://www.deb.im",
  "type": "wordpress-plugin",
  "license": "MIT",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Debabrata Karfa",
      "email": "im@deb.im"
    }
  ],
  "require": {
    "php": ">=7.3"
  },
  "autoload": {
    "psr-4": {
      "DGWorks\\": "app/classes"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.2",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "lint": "phpcs .",
    "lint-fix": "phpcbf ."
  },
  "extra": {
    "scripts-description": {
      "lint": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
      "lint-fix": "Fix coding standards warnings/errors automatically with PHP Code Beautifier"
    }
  }
}
